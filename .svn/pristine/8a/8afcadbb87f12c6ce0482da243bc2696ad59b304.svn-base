<%= form_for(@transaction) do |f| %>
  <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
      <% @transaction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



  <div class="field">
    <%= label_tag :vendor_name%>
    <%= text_field_tag :vendor_name, vendor_name(@transaction) %>
  </div>
  <div class="field">
    <%= label_tag :category_name %>
    <%= text_field_tag :category_name, category_name(@transaction) %>
  </div>
  <div class="field">
    <%= f.label :accounting_month %><br />
    <%= f.text_field :accounting_month %>
  </div>
  <div class="field">
    <%= f.label :accounting_year %><br/>
    <%= f.number_field :accounting_year %>
  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :recurring %><br />
    <%= f.check_box :recurring %>
  </div>
  <div class="field">
    <%= f.label :cleared %><br />
    <%= f.check_box :cleared %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :classification %><br/>
    <%= f.text_field :classification %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
