<h2>Transactions</h2>
<%= accounting_month %>

<table id='trans_table' class="display" style='padding-top:100px;'>
  <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Category</th>
        <th>Amount</th>
        <th>Recurring</th>
        <th>Cleared</th>
        <th>Date</th>
        <th>Acct Month</th>
        <th>Acct Year</th>
        <th></th>
      </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr class='gradeA'>
        <td><%= transaction.id %></td>
        <td id='vendorName_<%= transaction.id %>' name='vendor_name' class='editable'><%= transaction.vendor.name if !transaction.vendor.nil? %></td>
        <td id='categoryName_<%= transaction.id %>' name='category_name' class='editable'><%= transaction.category.name if !transaction.category.nil? %></td>
        <td id='amount_<%= transaction.id %>' name='amount' class='editable'><%= transaction.amount %></td>
        <td id='recurring_<%= transaction.id %>' name='recurring' class='editable'><%= transaction.recurring %></td>
        <td id='cleared_<%= transaction.id %>' name='cleared' class='editable'><%= transaction.cleared %></td>
        <td id='date_<%= transaction.id %>' name='date' class='editable'><%= transaction.date %></td>
        <td id='accountingMonth_<%= transaction.id %>' name='accounting_month' class='editable'><%= transaction.accounting_month %></td>
        <td id='accountingYear_<%= transaction.id %>' name='accounting_year' class='editable'><%= transaction.accounting_year %></td>
        <td><%= link_to 'Show', transaction %>
        <%= link_to 'Edit', edit_transaction_path(transaction) %>
        <%= link_to 'Delete', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Transaction', new_transaction_path, id: 'new_trans_btn' %>

<%= javascript_include_tag 'transactions.js' %>