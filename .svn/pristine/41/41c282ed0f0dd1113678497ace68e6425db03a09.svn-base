
  <h2 style='float:right;'>Transactions</h2>

  <h2 style='float:left;'><%= month_name %></h2>

  <%= hidden_field_tag 'month-name', month_name, id: 'month-name' %>
  <%= hidden_field_tag 'prev-month', prev_month, id: "prev-month" %>
  <%= hidden_field_tag 'next-month', next_month, id: "next-month" %>

  <table class="display" style='padding-top:100px;'>
    <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Category</th>
      <th>Amount</th>
      <th>Recurring</th>
      <th>Cleared</th>
      <th>Date</th>
      <th>Ledger Month</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @transactions.each do |transaction| %>
        <tr class='gradeA'>
          <td><%= transaction.id %></td>
          <td >
            <input type='text' id='vendorName_<%= transaction.id %>' class='typeahead' name='vendors' value="<%= transaction.vendor.name if !transaction.vendor.nil? %>" />
          </td>
          <td >
            <input type='text' id='categoryName_<%= transaction.id %>' class='autocomplete' name='categories' value="<%= transaction.category.name if !transaction.category.nil? %>" />
          </td>
          <td id='amount_<%= transaction.id %>' name='amount' class='editable'><%= transaction.amount %></td>
          <td id='recurring_<%= transaction.id %>' name='recurring'>
            <input type='checkbox' <%= checked(transaction.recurring) %> value='<%= transaction.recurring %>' class='edit-checkbox' />
          </td>
          <td id='cleared_<%= transaction.id %>' name='cleared' >
            <input type='checkbox' <%= checked(transaction.cleared) %> value='<%= transaction.cleared %>' class='edit-checkbox' />
          </td>
          <td id='date_<%= transaction.id %>' name='date'>
            <%= text_field_tag transaction.date, nil, class: 'editable date', id: "dt-date_#{transaction.id}" %>
            <%= transaction.date if !transaction.date.nil? %>
          </td>
          <td id='ledgerMonth_<%= transaction.id %>' name='ledger_month' class='editable'><%= transaction.ledger_month %></td>
          <td><%= link_to 'Show', transaction %>
            <%= link_to 'Edit', edit_transaction_path(transaction) %>
            <%= link_to 'Delete', transaction, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <br/>
